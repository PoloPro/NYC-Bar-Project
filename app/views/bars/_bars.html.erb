<% bars.each do |bar| %>
<li>
  <a href="<%= bar_path(bar) %>" style="color: inherit">
    <div class="card card-block">
      <div class="row">
        <div class="col-xs-6">
          <h4 class="name montserrat"><%= bar.name %></h4>
          <ul class="list-inline">
            <% bar.categories.each do |category| %>
            <li class="list-inline-item">
              <%= link_to category.name, category %><%= " | " unless category == bar.categories.last %>
            </li>
            <% end %>
          </ul>
        </div>
        <div class="col-xs-6 text-xs-right">
          <p class="card-text"><%= bar.address %><br>
            <%= bar.neighborhood.borough ? bar.neighborhood.borough.name : "New York" %>, NY <%= bar.zipcode %>
          </p>
        </div>
      </div>
    </div>
  </a>
</li>
<% end %>