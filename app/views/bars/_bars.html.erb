<% bars.each do |bar| %>
<li>
  <a href="<%= bar_path(bar) %>" style="color: inherit">
    <div class="card card-block">
      <h4 class="name"><%= bar.name %></h4>
      <ul class="list-inline">
        <% bar.categories.each do |category| %>
        <li class="list-inline-item">
          <%= link_to category.name, category %><%= " | " unless category == bar.categories.last %>
        </li>
        <% end %>
      </ul>
      <p class="card-text"><%= bar.address %>, <%= bar.zipcode %></p>
    </div>
  </a>
</li>
<% end %>