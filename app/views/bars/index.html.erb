
<!-- <em>There are currently <strong><%= @bars.count %></strong> bars in the database.</em> -->

<div id="bar-list-searchable">

  <!-- Search bar for filtering bars -->
  <input class="search" placeholder="Search">
  <button class="sort" data-sort="name">Sort by name</button>
  <button class="sort" data-sort="category">Sort by category</button>

  <br>
  <hr>

  <!-- List for filtering -->
  <ul class="paginationTop list-inline"></ul>
  <ul class="list" id="bar-list">

    <% @bars.each do |bar| %>
    <li>
      <a href="<%= bar_path(bar) %>" style="color: inherit">
        <div class="card card-block">
          <h4 class="name"><%= bar.name %></h4>
          <ul class="list-inline">
            <% bar.categories.each do |category| %>
            <li class="list-inline-item category"><%= category.name %></li>
            <% end %>
          </ul>
          <p class="card-text"><%= bar.address %>, <%= bar.zipcode %></p>
        </div>
      </a>
    </li>
    <% end %>

  </ul>
  <ul class="paginationBottom"></ul>
</div>

