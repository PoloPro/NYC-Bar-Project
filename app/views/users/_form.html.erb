<%= form_for user do |f| %>

<div class="form-inputs">
  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, :required => true, :autofocus => true %>
  </div>
  <div>
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, :required => true %>
  </div>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
